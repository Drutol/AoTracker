<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewHeader">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">?AccentColour</item>
        <item name="android:textSize">@dimen/FontSizeMedium</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextViewSubtitle">
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textColor">?TextColour</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="TextViewHelp">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">?TextColour</item>
        <item name="android:textSize">@dimen/FontSizeSemiNormal</item>
        <item name="android:textStyle">italic</item>
        <item name="android:drawableLeft">@drawable/icon_chevron_right_small</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">?AccentColour</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">?ForegroundDeepColour</item>
    </style>

    <style name="ViewDividerTall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">?ForegroundDeepColour</item>
    </style>

    <style name="SettingsAccentBoxStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:tint">#fff</item>
        <item name="android:src">@drawable/icon_tick</item>
    </style>

</resources>
