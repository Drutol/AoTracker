<resources>

    <style name="AoTracker.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="TextColour">@color/DarkTextColour</item>
        <item name="TextInvertedColour">@color/LightTextColour</item>
        <item name="BackgroundColour">@color/DarkBackgroundColour</item>
        <item name="ForegroundColour">@color/DarkForegroundColour</item>
        <item name="ForegroundDeepColour">@color/DarkForegroundDeepColour</item>
    </style>

    <style name="AoTracker.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="TextColour">@color/LightTextColour</item>
        <item name="TextInvertedColour">@color/DarkTextColour</item>
        <item name="BackgroundColour">@color/LightBackgroundColour</item>
        <item name="ForegroundColour">@color/LightForegroundColour</item>
        <item name="ForegroundDeepColour">@color/LightForegroundDeepColour</item>
    </style>

    <style name="ColourSchemeOrange">
        <item name="colorPrimary">@color/OrangeColour</item>
        <item name="colorPrimaryDark">@color/OrangeDarkColour</item>
        <item name="colorAccent">@color/OrangeColour</item>

        <item name="AccentColour">@color/OrangeColour</item>
        <item name="AccentDarkColour">@color/OrangeDarkColour</item>
    </style>

    <style name="ColourSchemeLime">
        <item name="colorPrimary">@color/LimeColour</item>
        <item name="colorPrimaryDark">@color/LimeDarkColour</item>
        <item name="colorAccent">@color/LimeColour</item>

        <item name="AccentColour">@color/LimeColour</item>
        <item name="AccentDarkColour">@color/LimeDarkColour</item>
    </style>

    <style name="AoTracker.Light.Lime" parent="AoTracker.Light">
        <item name="colorPrimary">@color/LimeColour</item>
        <item name="colorPrimaryDark">@color/LimeDarkColour</item>
        <item name="colorAccent">@color/LimeColour</item>

        <item name="AccentColour">@color/LimeColour</item>
        <item name="AccentDarkColour">@color/LimeDarkColour</item>
    </style>

</resources>
