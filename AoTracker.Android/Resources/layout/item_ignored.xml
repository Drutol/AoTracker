<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?ForegroundColour"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?ForegroundShallowColour"
        android:elevation="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:adjustViewBounds="true"
            android:alpha=".1"
            android:maxWidth="64dp"
            android:maxHeight="64dp"
            android:scaleType="fitStart"
            android:translationX="32dp"
            android:src="@drawable/icon_stop_big"
            android:tint="?TextColour" />

        <LinearLayout
            android:id="@+id/ClickSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Image"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@drawable/test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textColor="?TextColour"
                    tools:text="Some ingored item name" />

                <TextView
                    android:id="@+id/IgnoredAtLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_light"
                    android:textColor="?TextColour"
                    android:textSize="@dimen/FontSizeSemiNormal"
                    tools:text="Ignored at: 22.04.25" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</LinearLayout>
