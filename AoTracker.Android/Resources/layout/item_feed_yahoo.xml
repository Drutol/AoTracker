<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?ForegroundColour"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ClickSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?ForegroundShallowColour"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?ForegroundShallowColour"
            android:elevation="4dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ImageLeft"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    tools:src="@drawable/test" />


                <android.support.design.widget.FloatingActionButton xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/NewAlertSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="?AccentDarkColour"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:src="@drawable/icon_new"
                    app:fabSize="mini" />
            </FrameLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?ForegroundShallowColour"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?ForegroundShallowColour"
                android:elevation="2dp"
                android:gravity="center"
                android:padding="4dp">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_family_medium"
                    android:maxLines="2"
                    android:textColor="?TextColour"
                    android:textSize="@dimen/FontSizeMedium"
                    tools:text="Some Item Header" />

                <ImageView
                    android:id="@+id/StoreIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/yahoo" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/DetailSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/DetailBids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/icon_bid"
                        android:drawablePadding="8dp"
                        android:drawableTint="?AccentDarkColour"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:textColor="?TextColour"
                        tools:text="Bids: 24" />

                    <TextView
                        android:id="@+id/DetailEndsIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/icon_hourglass"
                        android:drawablePadding="8dp"
                        android:drawableTint="?AccentDarkColour"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:textColor="?TextColour"
                        tools:text="Ends in: 6d 5h 22m" />

                    <TextView
                        android:id="@+id/DetailCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/icon_diamond"
                        android:drawablePadding="8dp"
                        android:drawableTint="?AccentDarkColour"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:textColor="?TextColour"
                        tools:text="Condition: New" />

                    <TextView
                        android:id="@+id/DetailShipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/icon_truck_check"
                        android:drawablePadding="8dp"
                        android:drawableTint="?AccentDarkColour"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:textColor="?TextColour"
                        tools:text="Free shipping" />

                    <TextView
                        android:id="@+id/DetailsTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableStart="@drawable/icon_money_multiple_medium"
                        android:drawablePadding="8dp"
                        android:drawableTint="?AccentDarkColour"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:textColor="?TextColour"
                        tools:text="Tax: +8%" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PriceSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="?ForegroundShallowColour"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:outlineAmbientShadowColor="?AccentColour"
                    android:outlineSpotShadowColor="?AccentColour"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/PriceTrendIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_chevron_triple_up"
                        tools:tint="@color/RedColour" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:fontFamily="@string/font_family_medium"
                            android:textColor="?TextColour"
                            android:textSize="@dimen/FontSizeMedium"
                            tools:text="1111¥" />

                        <TextView
                            android:id="@+id/PriceSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/FontSizeSemiNormal"
                            android:textStyle="italic"
                            tools:text="(+100¥)"
                            tools:textColor="@color/RedColour" />
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/ViewDivider"
        android:layout_marginTop="16dp" />

</LinearLayout>
