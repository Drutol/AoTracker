<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/background_bottom_shadow"
        android:scaleType="centerCrop"
        android:src="?DrawableNavigationHeader" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:src="@drawable/icon_logo_small" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="8dp"
        android:backgroundTint="@color/DarkTextColour"
        android:fontFamily="@string/font_family_light"
        android:text="AoTracker"
        android:textColor="@color/DarkTextColour"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/icon_warning"
        android:drawableRight="@drawable/icon_warning"
        android:drawableTint="@color/RedColour"
        android:gravity="center"
        android:text="ALPHA"
        android:textColor="@color/RedColour" />

</FrameLayout>
