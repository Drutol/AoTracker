<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?ForegroundColour">

    <LinearLayout
        android:id="@+id/ClickSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?ForegroundShallowColour"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/ImageLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@drawable/test" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:padding="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_medium"
                    android:textColor="?TextColour"
                    tools:text="Some Item Header" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="?TextColour"
                    tools:text="Some item description\n\n\n\n" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:text="lol"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@string/font_family_light"
                        android:textColor="?AccentColour"
                        tools:text="Bids: 12 Ends in: 6h 25m" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_margin="4dp"
                    android:background="?ForegroundShallowColour"
                    android:elevation="4dp"
                    android:outlineAmbientShadowColor="?AccentColour"
                    android:outlineSpotShadowColor="?AccentColour"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@string/font_family_medium"
                        android:textColor="?TextColour"
                        tools:text="1111Â¥" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
